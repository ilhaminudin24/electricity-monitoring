rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Readings collection - dev mode: allow all read/write
    // TODO: Lock down with authentication for production
    match /readings/{docId} {
      allow read, write: if true; // dev mode only - allows public access
    }
    
    // Production rules example (commented out):
    // match /readings/{docId} {
    //   allow read, write: if request.auth != null; // requires authentication
    // }
  }
}

